<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchForAMovie"
    android:paddingTop="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_centerInParent="true"
    android:background="@mipmap/movieb2">


    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextViewSearchForAMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Seach By Movie Name"
        android:gravity="center"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />


    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Search"
        android:background="@drawable/trans_background3"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/responseTextViewSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
